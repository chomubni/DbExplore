<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ivan.dbexplore.MainActivity">

    <TextView
        android:id="@+id/data_display_txtV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello World!"
        android:layout_weight="2"/>
    <EditText
        android:id="@+id/first_name_etx"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="First Name"/>
    <EditText
        android:id="@+id/second_name_etx"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Second Name"/>
    <EditText
        android:id="@+id/Age_etx"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Age"/>
    <Button
        android:id="@+id/save_data_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="save data"/>
    <Button
        android:id="@+id/get_data_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="get data"/>

</LinearLayout>
